@{
    ViewBag.Title = "Login";
}
<div id="app">
    <section class="section">
        <div class="d-flex flex-wrap align-items-stretch">
            <div class="col-lg-4 col-md-6 col-12 order-lg-1 min-vh-100 order-2 bg-white">
                <div class="p-4 m-3">
                    <img src="~/Content/assets/img/logo-dark.svg" alt="logo" width="160" height="80" class="mb-2 mt-2 p-2 ml-0">
                    <h4 class="text-dark font-weight-normal">Welcome to <span class="font-weight-bold">Docs</span></h4>
                    <p class="text-muted">Before you get started, you must login or register if you don't already have an account.</p>

                    @if (@ViewBag.Message == "Failed")
                    {
                        <div class="alert alert-danger alert-has-icon">
                            <div class="alert-icon"><i class="fa fa-times"></i></div>
                            <div class="alert-body pt-1">
                                Email &amp; Password did not match
                            </div>
                        </div>
                    }

                    @if (@ViewBag.Message == "LoggedOut")
                    {
                        <div class="alert alert-warning alert-has-icon">
                            <div class="alert-icon"><i class="fa fa-exclamation-triangle"></i></div>
                            <div class="alert-body pt-1">
                                Please Login / Register first!
                            </div>
                        </div>
                    }

                    @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @class = "needs-validation", @novalidate = "" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input id="email" type="email" class="form-control" name="email" tabindex="1" required autofocus>
                            <div class="invalid-feedback">
                                Please fill in your email
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="d-block">
                                <label for="password" class="control-label">Password</label>
                            </div>
                            <input id="password" type="password" class="form-control" name="password" tabindex="2" required>
                            <div class="invalid-feedback">
                                Please fill in your password
                            </div>
                        </div>

                        <div class="form-group text-right">
                            <a href="auth-forgot-password.html" class="float-left mt-3">
                                Forgot Password?
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg btn-icon icon-right" tabindex="4">
                                Login
                            </button>
                        </div>

                        <div class="mt-5 text-center">
                            Don't have an account? @Html.ActionLink("Create new one", "Index", "Register", null, null)
                        </div>
                    }

                    <div class="text-center mt-5 text-small">
                        Copyright &copy; 2019, docs.in
                        @*<div class="mt-2">
                            <a href="#">Privacy Policy</a>
                            <div class="bullet"></div>
                            <a href="#">Terms of Service</a>
                        </div>*@
                    </div>
                </div>
            </div>
            <div class="col-lg-8 col-12 order-lg-2 order-1 min-vh-100 background-walk-y position-relative" data-background="../../Content/assets/img/unsplash/login-bg-01.jpg"></div>
        </div>
    </section>
</div>
