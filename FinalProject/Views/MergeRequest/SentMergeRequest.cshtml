@{
    ViewBag.Title = "Sent Merge Requests";
}
@model  List<FinalProject.Models.MergeRequest>
<div id="app">
    <div class="main-wrapper">
        @Html.Partial("Navigation")

        <!-- Main Content -->
        <div class="main-content">
            <section>
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h4>Sent Merge Requests</h4>
                            </div>
                            <div class="card-body p-0">
                                <div class="table-responsive">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th scope="col">#</th>
                                                <th scope="col">Merge Request Sent By</th>
                                                <th scope="col">Status</th>
                                                <th scope="col">Comment</th>
                                            </tr>
                                        </thead>
                                        @{
                                            int num = 1;
                                            foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>@num</td>
                                                    <td>@item.UserName</td>
                                                    <td>@item.status</td>
                                                    <td>@item.comment</td>
                                                    @*<td>
                                                        <button class="btn btn-danger mr-2" id="modal-board-@item.Id" data-board-id="@item.Id" data-board-name="@item.BoardName">
                                                            <i class="fa fa-trash"></i>
                                                        </button>
                                                    </td>*@
                                                </tr>
                                                num = num + 1;
                                            }
                                        }
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
        @Html.Partial("Footer")
    </div>
</div>


