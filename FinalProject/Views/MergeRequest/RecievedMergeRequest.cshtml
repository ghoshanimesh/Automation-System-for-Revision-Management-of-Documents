@{
    ViewBag.Title = "Received Merge Requests";
}
@model  List<FinalProject.Models.MergeRequest>
<div id="app">
    <div class="main-wrapper">
        @Html.Partial("Navigation")

        <!-- Main Content -->
        <div class="main-content">
            <section>
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h4>Received Merge Requests</h4>
                            </div>
                            <div class="card-body p-0">
                                <div class="table-responsive">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th scope="col">#</th>
                                                <th scope="col">Merge Request From</th>
                                                <th scope="col">Status</th>
                                                <th scope="col">Accept/Reject Request</th>
                                            </tr>
                                        </thead>
                                        @{
                                            int num = 1;
                                            foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>@num</td>
                                                    <td>@item.UserName</td>
                                                    <td>@item.status</td>
                                                    <td>
                                                        @if (item.status == "Pending")
                                                        {
                                                            <button class="btn btn-primary mr-2" id="merge-requests" data-merge-request-id="@item.Id">
                                                                Accept &frasl; Reject
                                                            </button>
                                                        }
                                                    </td>
                                                </tr>
                                                num = num + 1;
                                            }
                                        }
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
        @Html.Partial("Footer")
    </div>
</div>
<form class="modal-part" id="modal-form-merge-request-comment">
    <div class="form-group col-12 col-md-12 col-lg-12">
        <label>Merge Request Comment</label>
        <input type="text" class="form-control" name="comment" required>
        <div class="invalid-feedback">
            Please fill in the comment
        </div>
    </div>
</form>
