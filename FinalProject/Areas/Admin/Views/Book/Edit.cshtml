@{
    ViewBag.Title = "Admin Dashboard | Add a Book";
}
@model Tuple<List<FinalProject.Areas.Admin.Models.Subject>, List<FinalProject.Areas.Admin.Models.Level>, List<FinalProject.Areas.Admin.Models.Language>, FinalProject.Areas.Admin.Models.Book>
<div id="app">
    <div class="main-wrapper">
        @Html.Partial("Navigation")
        <!-- Main Content -->
        <div class="main-content">
            <section>
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h4>Edit a Book</h4>
                            </div>
                            <div class="card-body">
                                @using (Html.BeginForm("Edit", "Book", FormMethod.Post, new { enctype = "multipart/form-data", @class = "needs-validation", @novalidate = "" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <div class="row">
                                        <div class="form-group col-12 col-md-12 col-lg-6">
                                            <label>Select Subject</label>
                                            <select class="form-control selectric" name="sub_id" required>
                                                @foreach (var item in Model.Item1)
                                                {
                                                    if (item.BoardName == Model.Item4.BoardName && item.StdName == Model.Item4.StandardName && item.SubjectName == Model.Item4.SubjectName)
                                                    {
                                                        <option value="@item.Id" selected>@item.BoardName &mdash; @item.StdName &mdash; @item.SubjectName </option>
                                                    }
                                                    else
                                                    {
                                                        <option value="@item.Id">@item.BoardName &mdash; @item.StdName &mdash; @item.SubjectName </option>
                                                    }
                                                }
                                            </select>
                                            <div class="invalid-feedback">
                                                Please Select a Suject
                                            </div>
                                        </div>

                                        <div class="form-group col-12 col-md-12 col-lg-3">
                                            <label>Select Level</label>
                                            <select class="form-control selectric" name="level_id" required>
                                                @foreach (var item in Model.Item2)
                                                {
                                                    if (item.level == Model.Item4.Level)
                                                    {
                                                        <option value="@item.level_id" selected>@item.level </option>
                                                    }
                                                    else
                                                    {
                                                        <option value="@item.level_id">@item.level </option>
                                                    }
                                                }
                                            </select>
                                            <div class="invalid-feedback">
                                                Please Select a Level
                                            </div>
                                        </div>

                                        <div class="form-group col-12 col-md-12 col-lg-3">
                                            <label>Select Language</label>
                                            <select class="form-control selectric" name="lang_id" required>
                                                @foreach (var item in Model.Item3)
                                                {
                                                    if (item.language_name == Model.Item4.Language)
                                                    {
                                                        <option value="@item.language_id" selected>@item.language_name </option>
                                                    }
                                                    else
                                                    {
                                                        <option value="@item.language_id ">@item.language_name </option>
                                                    }
                                                }
                                            </select>
                                            <div class="invalid-feedback">
                                                Please Select a Language
                                            </div>
                                        </div>

                                        <div class="form-group col-12 col-md-12 col-lg-12">
                                            <label>Book Name</label>
                                            <input type="text" class="form-control" name="book_name" required value="@Model.Item4.DocumentName">
                                            <div class="invalid-feedback">
                                                Please fill in the Book name
                                            </div>
                                        </div>

                                        <input hidden value="@Model.Item4.Sll_Id" name="sll_id" />
                                        <input hidden value="@Model.Item4.DocId" name="doc_id" />
                                    </div>

                                    <div class="mb-3 mr-3 text-right">
                                        <button type="submit" class="btn btn-primary btn-lg btn-icon icon-right" tabindex="4">
                                            Edit Book
                                        </button>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
        @Html.Partial("Footer")
    </div>
</div>
