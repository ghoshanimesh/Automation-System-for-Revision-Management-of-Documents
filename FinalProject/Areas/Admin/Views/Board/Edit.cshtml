@{
    ViewBag.Title = "Admin Dashboard | Edit a Board";
}
<div id="app">
    <div class="main-wrapper">
        @Html.Partial("Navigation")
        <!-- Main Content -->
        <div class="main-content">
            <section>
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h4>Edit a Board</h4>
                            </div>
                            <div class="card-body">
                                @using (Html.BeginForm("Edit", "Board", FormMethod.Post, new { @class = "needs-validation", @novalidate = "" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <div class="form-group">
                                        <label>Board Name</label>
                                        <input hidden value="@ViewBag.Id" name="board_id" />
                                        <input type="text" class="form-control" name="board_name" required autofocus value="@ViewBag.BoardName">
                                        <div class="invalid-feedback">
                                            Please fill in the Board name
                                        </div>
                                    </div>
                                    <div class="mb-3 mr-3 text-right">
                                        <button type="submit" class="btn btn-primary btn-lg btn-icon icon-right" tabindex="4">
                                            Edit Board
                                        </button>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
        @Html.Partial("Footer")
    </div>
</div>


